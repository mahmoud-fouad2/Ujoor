# =============================================
# Ujoor HR Platform - Environment Variables
# =============================================
# Copy this file to .env and fill in the values

# ===== Database (Render Postgres) =====
DATABASE_URL="postgresql://user:password@host:5432/ujoor?schema=public"

# ===== Cloudflare R2 Storage =====
R2_ACCOUNT_ID=""
R2_ACCESS_KEY_ID=""
R2_SECRET_ACCESS_KEY=""
R2_BUCKET_NAME="ujoor"
R2_PUBLIC_URL="https://pub-408c0f665b964f47bcd1abfe89ac8aed.r2.dev"
R2_ENDPOINT="https://de95c4f37b252fdb5c22a69ed3d7d3a1.r2.cloudflarestorage.com"

# ===== Authentication (NextAuth) =====
# Generate with: openssl rand -base64 32
NEXTAUTH_SECRET=""
NEXTAUTH_URL="http://localhost:3000"

# ===== Mobile Authentication (Bearer JWT + Refresh) =====
# Access token signing secret (generate with: openssl rand -base64 32)
MOBILE_JWT_SECRET=""

# Refresh token hashing secret (generate with: openssl rand -base64 32)
MOBILE_REFRESH_TOKEN_SECRET=""

# Optional
# MOBILE_REFRESH_TOKEN_TTL_DAYS="30"
# MOBILE_CHALLENGE_TTL_SECONDS="120"

# ===== Google reCAPTCHA =====
NEXT_PUBLIC_RECAPTCHA_SITE_KEY=""
RECAPTCHA_SECRET_KEY=""

# ===== Error Tracking (Sentry) =====
# Create a project at https://sentry.io and paste the DSN(s).
SENTRY_DSN=""
NEXT_PUBLIC_SENTRY_DSN=""

# Optional: For uploading source maps
SENTRY_ORG=""
SENTRY_PROJECT=""
SENTRY_AUTH_TOKEN=""

# ===== Logging Configuration =====
# Log level: debug | info | warn | error
# Use 'info' in production, 'debug' in development
LOG_LEVEL="info"

# Enable/disable audit logging (default: true)
# Set to 'false' to disable automatic audit logging via Prisma middleware
ENABLE_AUDIT_LOGGING="true"

# ===== Application =====
NEXT_PUBLIC_APP_URL="http://localhost:3000"
NEXT_PUBLIC_APP_NAME="Ujoor"
NEXT_PUBLIC_DEFAULT_LOCALE="ar"

# ===== Marketing / SEO (Optional) =====
# Used for JSON-LD AggregateRating (only set if true)
NEXT_PUBLIC_RATING_VALUE="5"
NEXT_PUBLIC_RATING_COUNT="123"

# Used for canonical/OG URLs (fallbacks to https://ujoor.onrender.com)
NEXT_PUBLIC_SITE_URL="http://localhost:3000"

# ===== Base Domain (for multi-tenant subdomains) =====
UJOORS_BASE_DOMAIN="ujoor.com"

# ===== Support (Optional) =====
# Used on guest support page
# NEXT_PUBLIC_SUPPORT_EMAIL="support@ujoor.app"

# ===== Email (Optional - for notifications) =====
# SMTP_HOST=""
# SMTP_PORT="587"
# SMTP_USER=""
# SMTP_PASSWORD=""
# SMTP_FROM="noreply@ujoor.com"

# ===== Super Admin (First Setup) =====
# Used by seed script to create initial super admin
SUPER_ADMIN_EMAIL="admin@ujoor.com"
SUPER_ADMIN_PASSWORD=""

# Force bootstrap admin reset/ensure (used by scripts/ensure-super-admin.mjs)
# SUPER_ADMIN_FORCE="false"

# ===== Render Bootstrap (Optional) =====
# Retry prisma db push on Render before starting the app
# DB_BOOTSTRAP_ATTEMPTS="10"
# DB_BOOTSTRAP_DELAY_MS="3000"

# ===== Smoke Tests (Optional) =====
# Used by: pnpm smoke
# SMOKE_BASE_URL="http://localhost:3000"
# SMOKE_TIMEOUT_MS="10000"

